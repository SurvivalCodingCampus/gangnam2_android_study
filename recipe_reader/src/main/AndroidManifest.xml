<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Need permissions to query provider? Normal permission is not needed if exported=true and no readPermission set. -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- If we used specific permission in provider, we would need it here. -->
    
    <queries>
        <package android:name="com.survivalcoding.gangnam2kiandroidstudy" />
        <provider android:authorities="com.survivalcoding.gangnam2kiandroidstudy.provider" />
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/sym_def_app_icon"
        android:label="Recipe Reader"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Recipe Reader"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
