<?xml version="1.0" encoding="utf-8"?>
<!--
    레거시 카드 형태의 Saved Recipe 아이템 뷰

    RecyclerView + ViewBinding
    Image + Text 카드 형태

    접근성/UX 고려:
    - placeholder 텍스트는 tools:text 사용
    - 클릭 가능한 카드로 ripple 제공
    - 이미지 장식용, 제목은 읽히도록 구성
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:padding="12dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- 레시피 썸네일 이미지 (장식용) -->
    <ImageView
    android:id="@+id/imageThumbnail"
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:contentDescription="@null"
    android:scaleType="centerCrop"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent" />


    <!-- 레시피 제목 -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/imageThumbnail"
        app:layout_constraintStart_toEndOf="@id/imageThumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="레시피 제목 예시" />

</androidx.constraintlayout.widget.ConstraintLayout>
