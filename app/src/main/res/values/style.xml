<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTextBase">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TitleTextRegular" parent="AppTextBase">
        <item name="android:textSize">50sp</item>
        <item name="android:lineSpacingExtra">75sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeaderTextRegular" parent="AppTextBase">
        <item name="android:textSize">30sp</item>
        <item name="android:lineSpacingExtra">45sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LargeTextRegular" parent="AppTextBase">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">30sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MediumTextRegular" parent="AppTextBase">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">27sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NormalTextRegular" parent="AppTextBase">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">24sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SmallTextRegular" parent="AppTextBase">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">21sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SmallerTextRegular" parent="AppTextBase">
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">17sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TitleTextBold" parent="AppTextBase">
        <item name="android:textSize">50sp</item>
        <item name="android:lineSpacingExtra">75sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderTextBold" parent="AppTextBase">
        <item name="android:textSize">30sp</item>
        <item name="android:lineSpacingExtra">45sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeTextBold" parent="AppTextBase">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumTextBold" parent="AppTextBase">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalTextBold" parent="AppTextBase">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallTextBold" parent="AppTextBase">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallerTextBold" parent="AppTextBase">
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>