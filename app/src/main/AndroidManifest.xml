<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".RecipeAppApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gangnam2kiAndroidStudy">
        <activity
            android:name=".presentation.screen.saved_recipes.legacy.SavedRecipesActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Theme.Gangnam2kiAndroidStudy">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Deep Links 설정 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="recipe.misterjerry.com"
                    android:scheme="app" />
            </intent-filter>

            <!-- App Links 설정 (HTTPS) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="misterjerry-androidstudy.web.app"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <!--
            [Content Provider 등록]
            외부 앱에 '저장된 레시피' 데이터를 제공하기 위한 Provider입니다.
            exported="true": 외부 앱에서 접근을 허용합니다.
        -->
        <!--        <provider-->
        <!--            android:name=".data.provider.RecipeProvider"-->
        <!--            android:authorities="com.misterjerry.gangnam2kiandroidstudy.provider"-->
        <!--            android:exported="true" />-->

        <provider
            android:name=".data.provider.RecipeProvider"
            android:authorities="${providerAuthority}"
            android:exported="true" />
    </application>

</manifest>